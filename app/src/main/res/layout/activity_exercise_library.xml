<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="Exercise Library"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnClearFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear" />
    </LinearLayout>

    <!-- Mode toggle: icon-only radio buttons -->
    <RadioGroup
        android:id="@+id/rgMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <!-- Strength -->
        <RadioButton
            android:id="@+id/rbExercises"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:checked="true"
            android:button="@null"
            android:background="@drawable/bg_toggle_radio"
            android:contentDescription="Strength"
            android:text=""
            android:drawableTop="@drawable/ic_mod_strength"
            android:drawablePadding="4dp"
            app:drawableTint="@color/modality_icon_tint" />

        <!-- Metcon -->
        <RadioButton
            android:id="@+id/rbMetcons"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:button="@null"
            android:background="@drawable/bg_toggle_radio"
            android:contentDescription="Metcon"
            android:text=""
            android:drawableTop="@drawable/ic_mod_metcon"
            android:drawablePadding="4dp"
            app:drawableTint="@color/modality_icon_tint" />

        <!-- Engine -->
        <RadioButton
            android:id="@+id/rbEngine"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:button="@null"
            android:background="@drawable/bg_toggle_radio"
            android:contentDescription="Engine"
            android:text=""
            android:drawableTop="@drawable/ic_mod_engine"
            android:drawablePadding="4dp"
            app:drawableTint="@color/modality_icon_tint" />

        <!-- Skills -->
        <RadioButton
            android:id="@+id/rbSkills"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:button="@null"
            android:background="@drawable/bg_toggle_radio"
            android:contentDescription="Skills"
            android:text=""
            android:drawableTop="@drawable/ic_mod_skill"
            android:drawablePadding="4dp"
            app:drawableTint="@color/modality_icon_tint" />
    </RadioGroup>

    <!-- Filters row (labels change meaning in code per mode) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <Spinner
            android:id="@+id/spinnerType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <Spinner
            android:id="@+id/spinnerEq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Scrollable content area (fills remaining space) -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp">

        <!-- Used for Metcon plans (and can be reused for Engine/Skills later if you prefer) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMetconPlans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:visibility="gone" />

        <!-- Used for Strength / Engine / Skills simple lists -->
        <ListView
            android:id="@+id/listLibrary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="12dp" />

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No items"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>
