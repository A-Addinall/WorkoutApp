<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:fillViewport="true"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Kind -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/inputKind"
                android:hint="Kind (ENGINE or SKILL)"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ENGINE group -->
        <LinearLayout
            android:id="@+id/groupEngine"
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/inputEngineMode"
                    android:hint="Mode (RUN/ROW/BIKE)"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/inputEngineIntent"
                    android:hint="Intent (FOR_TIME/DISTANCE/CALORIES)"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- FOR_TIME -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fieldProgramDistance"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:hint="Target distance (m)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputProgramDistance"
                    android:inputType="number"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- FOR_DISTANCE / FOR_CALORIES -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fieldProgramDuration"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:hint="Target duration (sec)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputProgramDuration"
                    android:inputType="number"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- FOR_CALORIES -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fieldTargetCalories"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:hint="Target calories">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTargetCalories"
                    android:inputType="number"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- SKILL group -->
        <LinearLayout
            android:id="@+id/groupSkill"
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/inputSkill"
                    android:hint="Skill"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/inputSkillTest"
                    android:hint="Test type"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fieldTargetReps"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:hint="Target reps (for time)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTargetReps"
                    android:inputType="number"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fieldTargetDuration"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:hint="Target duration (sec)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTargetDuration"
                    android:inputType="number"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:hint="Progression level (optional)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputProgression"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:hint="Scaled variant (optional)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputScaledVariant"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
