<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/restTimerContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:focusable="true"
    android:elevation="8dp"
    app:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground"
    app:contentPadding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/restTimerLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rest_timer_label"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/restTimerValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:00"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/restTimerProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:max="1000"
            android:progress="1000"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <ImageButton
                android:id="@+id/restTimerToggle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/rest_timer_toggle"
                android:src="@drawable/ic_pause_24"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <ImageButton
                android:id="@+id/restTimerClear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/rest_timer_clear"
                android:src="@drawable/ic_close_24"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
