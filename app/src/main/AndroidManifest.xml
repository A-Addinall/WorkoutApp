<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.safitness"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Foreground service (recommended; Android 9+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <application
        android:name=".WorkoutApp"
        android:allowBackup="true"
        android:label="SA Fitness"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SAFitness">

        <!-- Activities -->
        <activity android:name=".ui.ExerciseDetailActivity" android:exported="false" />
        <activity android:name=".ui.WorkoutActivity" android:exported="false" />
        <activity android:name=".ui.SettingsActivity" android:exported="false" />
        <activity android:name=".ui.PersonalRecordsActivity" android:exported="false" />
        <activity android:name=".ui.ExerciseLibraryActivity" android:exported="false" />
        <activity android:name=".ui.MetconActivity" android:exported="false" />
        <activity android:name=".ui.MetconAmrapActivity" android:exported="false" />
        <activity android:name=".ui.MetconEmomActivity" android:exported="false" />
        <activity
            android:name=".ui.engine.EngineForTimeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.engine.EngineAccumulationActivity"
            android:exported="false" />
        <activity android:name=".ui.engine.EngineEmomActivity" />
        <activity android:name=".ui.engine.SkillEmomActivity" />
        <activity android:name=".ui.engine.SkillAmrapActivity" />
        <activity android:name=".ui.engine.SkillForTimeActivity" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"/>

        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- âœ… Declare the service -->
        <service
            android:name=".service.RestTimerService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
    </application>
</manifest>
